<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/serverLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NTP Server"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/ntpServerSpinner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ntpServerSpinner"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.3" />

    <Spinner
        android:id="@+id/ntpServerSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serverLabel"
        app:layout_constraintBottom_toTopOf="@+id/customServerEditText"/>

    <EditText
        android:id="@+id/customServerEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter custom server address"
        android:inputType="textUri"
        android:textColor="@color/white"
        android:textColorHint="#CCCCCC"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/ntpServerSpinner"
        app:layout_constraintStart_toStartOf="@+id/ntpServerSpinner"
        app:layout_constraintTop_toBottomOf="@+id/ntpServerSpinner"
        app:layout_constraintBottom_toTopOf="@+id/secondHandLabel"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/secondHandLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Second Hand Style"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/secondHandSpinner"
        app:layout_constraintTop_toBottomOf="@+id/customServerEditText"
        app:layout_constraintBottom_toTopOf="@+id/secondHandSpinner"/>

    <Spinner
        android:id="@+id/secondHandSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/ntpServerSpinner"
        app:layout_constraintStart_toStartOf="@+id/ntpServerSpinner"
        app:layout_constraintTop_toBottomOf="@+id/secondHandLabel"
        app:layout_constraintBottom_toTopOf="@+id/creditsTextView"/>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/creditsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/credits_label"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/versionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Version 1.0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>